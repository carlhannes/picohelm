{
  "name": "picohelm",
  "type": "module",
  "version": "0.3.0",
  "description": "A helm alternative for kubernetes",
  "bin": {
    "picohelm": "build/picohelm.mjs"
  },
  "main": "build/picohelm.mjs",
  "scripts": {
    "build": "esbuild src/picohelm.ts --bundle --platform=node --packages=external --format=esm --outfile=build/picohelm.mjs",
    "lint": "eslint src --ext .ts",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/carlhannes/picohelm.git"
  },
  "keywords": [
    "picohelm",
    "k8s",
    "kubernetes",
    "helm",
    "templating",
    "mustache",
    "yaml",
    "wontache",
    "cli",
    "typescript"
  ],
  "author": "carlhannes",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/carlhannes/picohelm/issues"
  },
  "homepage": "https://github.com/carlhannes/picohelm#readme",
  "dependencies": {
    "commander": "^12.1.0",
    "dotenv": "^16.4.5",
    "glob": "^11.0.0",
    "js-yaml": "^4.1.0",
    "wontache": "^0.2.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.5.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "esbuild": "0.23.1",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-plugin-import": "^2.29.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.5.4"
  }
}
